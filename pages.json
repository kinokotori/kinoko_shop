{
	"easycom": {
		"^u-(.*)": "uview-ui/components/u-$1/u-$1.vue"
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "uni-app"
			}
		}
	    ,{
            "path" : "pages/cart/cart",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "购物车",
                "enablePullDownRefresh": true
            }
            
        }
        ,{
            "path" : "pages/user/user",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "个人中心",
                "enablePullDownRefresh": true
            }
            
        },
		{
		    "path" : "pages/home/home",
		    "style" :                                                                                    
		    {
		        "navigationBarTitleText": "主页",
		        "enablePullDownRefresh": true
		    }
		    
		},
		{
		    "path" : "pages/kind/kind",
		    "style" :                                                                                    
		    {
		        "navigationBarTitleText": "商品种类",
		        "enablePullDownRefresh": true
		    }
		    
		},
		{
		    "path" : "pages/login/login",
		    "style" :                                                                                    
		    {
		        "navigationBarTitleText": "登录",
		        "enablePullDownRefresh": true
		    }
		    
		},
		{
		    "path" : "pages/register/register",
		    "style" :                                                                                    
		    {
		        "navigationBarTitleText": "注册",
		        "enablePullDownRefresh": true
		    }
		    
		},
		{
		    "path" : "pages/detail/detail",
		    "style" :                                                                                    
		    {
		        "navigationBarTitleText": "商品详情",
		        "enablePullDownRefresh": true
		    }
		    
		}
    ],
	
	"tabBar": {
		"color": "#495057",
		"selectedColor": "#f66",
		"backgroundColor": "#fff",
		"list": [{
				"pagePath": "pages/home/home",
				"text": "首页",
				"iconPath": "./static/wwwroot/tabBar/home.png",
				"selectedIconPath": "./static/wwwroot/tabBar/home_active.png"
			},
			{
				"pagePath": "pages/kind/kind",
				"text": "分类",
				"iconPath": "./static/wwwroot/tabBar/kind.png",
				"selectedIconPath": "./static/wwwroot/tabBar/kind_active.png"
			},
			{
				"pagePath": "pages/cart/cart",
				"text": "购物车",
				"iconPath": "./static/wwwroot/tabBar/cart.png",
				"selectedIconPath": "./static/wwwroot/tabBar/cart_active.png"
			},
			{
				"pagePath": "pages/user/user",
				"text": "我的",
				"iconPath": "./static/wwwroot/tabBar/user.png",
				"selectedIconPath": "./static/wwwroot/tabBar/user_active.png"
			}
		]
	},
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
		
	},
	"uniIdRouter": {}
	,
	"condition" : { //模式配置，仅开发期间生效
		"current": 0, //当前激活的模式(list 的索引项)
		"list": [
			{
				"name": "", //模式名称
				"path": "pages/home/home", //启动页面，必选
				"query": "" //启动参数，在页面的onLoad函数里面得到
			}
		]
	}
}
